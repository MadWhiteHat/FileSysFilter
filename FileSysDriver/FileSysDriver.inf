;
; FileSysDriver.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=Sample ; TODO: edit Class
ClassGuid={78A1C341-4539-11d3-B88D-00C04FAD5171} ; TODO: edit ClassGuid
Provider=%ManufacturerName%
CatalogFile=FileSysDriver.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages
PnpLockDown=1

[DestinationDirs]
DefaultDestDir = 12
FileSysDriver_Device_CoInstaller_CopyFiles = 11

; ================= Class section =====================

[ClassInstall32]
Addreg=SampleClassReg

[SampleClassReg]
HKR,,,0,%ClassName%
HKR,,Icon,,-5

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
FileSysDriver.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%FileSysDriver.DeviceDesc%=FileSysDriver_Device, Root\FileSysDriver ; TODO: edit hw-id

[FileSysDriver_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
FileSysDriver.sys

;-------------- Service installation
[FileSysDriver_Device.NT.Services]
AddService = FileSysDriver,%SPSVCINST_ASSOCSERVICE%, FileSysDriver_Service_Inst

; -------------- FileSysDriver driver install sections
[FileSysDriver_Service_Inst]
DisplayName    = %FileSysDriver.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\FileSysDriver.sys

;
;--- FileSysDriver_Device Coinstaller installation ------
;

[FileSysDriver_Device.NT.CoInstallers]
AddReg=FileSysDriver_Device_CoInstaller_AddReg
CopyFiles=FileSysDriver_Device_CoInstaller_CopyFiles

[FileSysDriver_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[FileSysDriver_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[FileSysDriver_Device.NT.Wdf]
KmdfService =  FileSysDriver, FileSysDriver_wdfsect
[FileSysDriver_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
ClassName="Samples" ; TODO: edit ClassName
DiskName = "FileSysDriver Installation Disk"
FileSysDriver.DeviceDesc = "FileSysDriver Device"
FileSysDriver.SVCDESC = "FileSysDriver Service"
